<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialview"
        android:layout_width="111dp"
        android:layout_height="111dp"
       app:cardCornerRadius="51dp"
        android:elevation="11dp"
        android:layout_marginVertical="11dp"
        android:layout_marginStart="11dp"
        app:strokeColor="@color/white"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/image"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:src="@drawable/picb"
            android:scaleType="centerCrop"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/eggTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01929402805"
        android:layout_marginStart="23dp"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="@id/materialview"
        app:layout_constraintStart_toEndOf="@id/materialview"
        app:layout_constraintBottom_toBottomOf="@id/materialview"/>

</androidx.constraintlayout.widget.ConstraintLayout>